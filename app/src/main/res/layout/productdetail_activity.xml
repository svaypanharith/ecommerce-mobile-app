<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/headerInclude"
        layout="@layout/header_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/productImageCarousel"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerInclude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dotsIndicator"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:backgroundTint="@color/white"
        app:tabBackground="@drawable/tab_indicator"
        app:tabIndicatorHeight="0dp"
        app:tabGravity="center"
        app:tabMode="fixed"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/productImageCarousel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/productScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/dotsIndicator"
        app:layout_constraintBottom_toTopOf="@id/btnAddToCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/productDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/productTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iPhone 17 ProMax"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1,299.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The iPhone 17 Pro Max features a heat-forged aluminum unibody, the powerful A19 Pro chip with advanced cooling, and a significantly improved camera system with a new 18MP Center Stage front camera and the longest zoom ever on an iPhone. Key upgrades include breakthrough battery life, up to 2TB storage, a 6.9-inch Super Retina XDR display, and enhanced performance with Apple Intelligence integration."
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="12dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <LinearLayout
                android:id="@+id/colorContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:id="@+id/storageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecreaseQty"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:backgroundTint="@color/black"
                    android:padding="0dp"
                    app:cornerRadius="6dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="40dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncreaseQty"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:backgroundTint="@color/black"
                    android:padding="0dp"
                    app:cornerRadius="6dp"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddToCart"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF5722"
        app:cornerRadius="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
