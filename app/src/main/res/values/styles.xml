<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/black</item>
        <item name="android:height">0dp</item>
        <item name="android:width">0dp</item>
        <item name="shapeAppearanceOverlay">@style/CustomBottomNavShape</item>
    </style>
    <style name="CustomBottomNavShape">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CustomFilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>

        <item name="chipMinTouchTargetSize">38dp</item>
        <item name="chipMinHeight">38dp</item>
        <item name="chipCornerRadius">100dp</item> <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>

        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
    </style>

    <style name="BottomSheetCustomAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_down</item>
    </style>

</resources>